
#!/bin/bash

# Number of servers to create
NUM_SERVERS=150
# Docker image to use
IMAGE="ubuntu"

# Loop to create servers
for i in $(seq 1 $NUM_SERVERS); do
    CONTAINER_NAME="server-$i"
    echo "Creating server: $CONTAINER_NAME"
    
    # Run the container in detached mode
    docker run -d --name "$CONTAINER_NAME" $IMAGE sleep infinity
done

echo "All $NUM_SERVERS servers created successfully!"
